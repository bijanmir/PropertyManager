@using PropertyManager.Models

<div class="card-box">
    @foreach (var property in Properties)
    {
      <div class="card property-card" style="width: 18rem;">
        <img class="card-img-top" src="assets/images/home1.png" alt="Card image cap">
        <div class="card-body">
          <h5 class="card-title">@property.Address</h5>
          <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
        </div>
        <ul class="list-group list-group-flush">
          <li class="list-group-item">@property.Tenant.FirstName @property.Tenant.LastName</li>
          <li class="list-group-item">@property.Tenant.Email</li>
          <li class="list-group-item">Rent: $@property.Rent</li>
          
        </ul>
        <div class="card-body">
          <a href="#" class="card-link">Card link</a>
          <a href="#" class="card-link">Another link</a>
        </div>
      </div>
    }
</div>




